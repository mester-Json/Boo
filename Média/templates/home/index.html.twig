{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block body %}
	{% include 'header.html.twig' %}

	<h1>Liste des livres</h1>


	{% for book in books %}
		<h3>Livre :
		</h3>
		<p>{{ book.tittle }}</p>

		<h3>Auteur :
		</h3>
		<p>{{ book.autor.name }}</p>
		<h3>Editeur :
		</h3>
		<p>{{ book.editor.name }}</p>
		<a href="{{ path('book_detail', {'id': book.id}) }}" class="btn btn-primary">Voir le livre</a>

	{% else %}
		<li>Aucun livre trouv√©.</li>
	{% endfor %}

{% endblock %}
